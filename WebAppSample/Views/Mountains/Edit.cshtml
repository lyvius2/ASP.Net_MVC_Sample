@model WebAppSample.Models.Mountain

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Mountain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="MountainName" class="control-label"></label>
                <input asp-for="MountainName" class="form-control" />
                <span asp-validation-for="MountainName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClimbmingDate" class="control-label"></label>
                <input asp-for="ClimbmingDate" class="form-control" />
                <span asp-validation-for="ClimbmingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height" class="control-label"></label>
                <input asp-for="Height" class="form-control" />
                <span asp-validation-for="Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Complete" /> @Html.DisplayNameFor(model => model.Complete)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RegDate" class="control-label"></label>
                <input asp-for="RegDate" class="form-control" />
                <span asp-validation-for="RegDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdDate" class="control-label"></label>
                <input asp-for="UpdDate" class="form-control" />
                <span asp-validation-for="UpdDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
